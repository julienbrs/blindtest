# Blindtest Nginx Reverse Proxy Configuration
#
# This is an example Nginx configuration for running Blindtest behind a reverse proxy.
# Copy this file to your Nginx sites-available directory and customize as needed.
#
# Installation:
#   sudo cp nginx.conf.example /etc/nginx/sites-available/blindtest
#   sudo ln -s /etc/nginx/sites-available/blindtest /etc/nginx/sites-enabled/
#   sudo nginx -t && sudo systemctl reload nginx

# HTTP Configuration (without SSL)
server {
    listen 80;
    server_name blindtest.local;  # Change to your domain or IP

    # Logging
    access_log /var/log/nginx/blindtest.access.log;
    error_log /var/log/nginx/blindtest.error.log;

    # Increase timeouts for audio streaming
    proxy_connect_timeout 60s;
    proxy_send_timeout 300s;
    proxy_read_timeout 300s;

    # Allow large audio files
    client_max_body_size 100M;

    # Main application
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;

        # WebSocket support (required for multiplayer)
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';

        # Preserve original host and client IP
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Don't buffer for WebSocket connections
        proxy_cache_bypass $http_upgrade;
        proxy_buffering off;
    }

    # Audio streaming endpoint - specific configuration
    location /api/audio/ {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Range $http_range;
        proxy_set_header If-Range $http_if_range;

        # Extended timeouts for audio streaming
        proxy_read_timeout 600s;
        proxy_send_timeout 600s;

        # Disable buffering for streaming
        proxy_buffering off;
    }
}

